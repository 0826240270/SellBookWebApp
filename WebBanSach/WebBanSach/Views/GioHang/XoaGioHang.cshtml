@using WebBanSach.Models;
@model List<GioHangSach>
@{
    ViewBag.Title = "XoaGioHang";
    Layout = "~/Views/Layout/NguoiDungLayout.cshtml";
}


<h2 style="text-align:center"> Giỏ hàng của bạn: </h2>
<br />
<table border="1" style="text-align:center; width:1100px; height:250px">
    <tr>
        <td>Mã sách:</td>
    
        <td>Tên sách:</td>
    
        <td> Hình ảnh:</td>
   
        <td>Số lượng:</td>
   
        <td>Đơn giá:</td>
        <td>Thay đổi </td>

    </tr>
    <tbody>
        @foreach (var i in Model)
        {
            <tr>
                <td>@i.sMASACH</td>
                <td>@i.sTENSACH</td>
                <td><img src="~/@i.sHINHANH" style= "width:200px; height:200px"/></td>
                <td>@i.iSOLUONG</td>
                <td>@i.fGIABAN</td>
                 @*<td> <a class="xoa" href="@Url.Action("XoaGioHang","GioHang")" style="color:red">Xóa</td>*@
            </tr>
        }
        <tr>       
        <td colspan="5"style="text-align:center">Số Lượng Mua: <a style ="color:red">@ViewBag.sl</a>  -  Thành Tiền: <a style ="color:red">@ViewBag.tt</a> VNĐ <a style="margin-right:50px"></a></td>
        </tr>
        
          
           
        
      </tbody>
    </table>